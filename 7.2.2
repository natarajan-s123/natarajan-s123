
import string

def strngs():
    a = input("Enter a string: ")
    l = len(a)
    print("Compressed string: ", end="")
    for i in range(l):
        c = 1
        while i < l - 1 and a[i] == a[i+1]:
            c += 1
            i += 1
        print(a[i], end="")
        if c > 1:
            print(c, end="")
strngs()


