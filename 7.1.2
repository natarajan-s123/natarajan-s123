import sys

def main():
    str = input("Enter a string: ")
    a = input("Enter a character: ")[0]
    b = input("Enter another character: ")[0]

    for i in range(len(str)):
        if str[i] == a:
            str = str[:i] + b + str[i+1:]
            break

    print(str)
    return 0

if __name__ == "__main__":
    main()

